<Window x:Class="WatchJ.WatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchJ"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="TomatoTV - Watch" Height="137.333" Width="302.667">
    <Grid Background="#FFE5E5E5">
        <Label Content="Watch a video!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="270"/>
        <TextBox Name="urlTB"  HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270"/>
        <Button Name="PlayBtn" Content="Play" HorizontalAlignment="Left" Margin="125,69,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Play"/>
        <Button Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="205,69,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Cancel"/>
    </Grid>
</Window>
